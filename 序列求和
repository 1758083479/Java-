import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
			Scanner sc = new Scanner(System.in);
			Long n = sc.nextLong();
			long sum = 0;
			if(n<1||n>1000000000){
				System.out.println("输入错误");
			}else{
			
			for(long i=1;i<=n;i++){
				
				sum +=i;
				
			}
			}
			System.out.println(sum);
	}

}
